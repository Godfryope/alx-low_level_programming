# Compiler
CC = gcc

# Source files
SRC = main.c foo.c bar.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Deletion program
RM = /bin/rm -f

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Header file dependency
DEPS = m.h

# Build executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

# Clean rules
clean:
	$(RM) $(NAME) *~ \#*\# *.o

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

# Recompile all source files
re: fclean all

# Object file rules
$(OBJ): %.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

