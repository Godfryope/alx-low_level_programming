
CC = gcc

SRC = main.c foo.c bar.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = /bin/rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

DEPS = m.h

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)\
	
clean:
	$(RM) $(NAME) *~ \#*\# *.o

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all


